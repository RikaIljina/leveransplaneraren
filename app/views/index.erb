<% form_tag('/session/create', class: 'form-signin') do %>
  <h2 class="form-signin-header">Logga in</h2>
  <div class="form-group">
    <label class="sr-only" for="email">E-postaddress</label>
    <input type="email" class="form-control" id="email" placeholder="E-post" name="email">
  </div>
  <button type="submit" class="btn btn-default">Logga in</button>
<% end %>
